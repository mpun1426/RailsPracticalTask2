<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>
<div class="user_admin_login">
  <h2>おかえりなさいませ</h2>
  <h3>ログインしましょう</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autocomplete: "email", placeholder: "　メールアドレス" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "　パスワード" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "ログイン状態を保つ場合はチェックしてください", class: "checkbox_str" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "reserve_button" %>
    </div>
  <% end %>

  <div class="option2">
    <%= render "devise/shared/links" %>
  </div>
</div>
